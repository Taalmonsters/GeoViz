<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= Rails.application.class.parent_name.titleize %><%= " - "+yield(:title) if content_for?(:title) %></title>
<meta name="description" content="<%= yield(:description) if content_for?(:description) %>">
<%= stylesheet_link_tag    "taalmonsters/application", media: "all" %>
<%= javascript_include_tag "taalmonsters/application" %>
<%= stylesheet_link_tag    "annotations/application", media: "all" %>
<%= javascript_include_tag "annotations/application" %>
<%= csrf_meta_tags %>
<%= favicon_link_tag image_path('taalmonsters/favicon.ico') %>
<%= favicon_link_tag image_path('taalmonsters/apple-icon.png'), rel: 'apple-touch-icon', type: 'image/png' %>
<%= yield(:header) %>