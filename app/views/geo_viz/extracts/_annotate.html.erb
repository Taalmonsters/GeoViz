<%= link_to "<span class='glyphicon glyphicon-fullscreen'></span> Show fullscreen".html_safe, "#annotate-fullscreen", :id => "open-annotate-fullscreen", :class => "btn btn-xs btn-primary", "data-toggle" => "modal" %>
<button id="new-marker" class="btn btn-xs btn-success disabled new"><span class="glyphicon glyphicon-map-marker"></span> Add marker</button>
<span class="loading hidden"></span><br/>
<div class="row">
    <div class="col-xs-6">
        <%= render partial: "geo_viz/extracts/annotation/map" %>
    </div>
    <div class="col-xs-6">
        <%= render partial: "geo_viz/extracts/annotation/content" %>
    </div>
</div>
<div id="extract-controls" class="col-xs-12">
	<% entity_mention = @source_document.entity_mentions.has_group(@group).new %>
	<% @group.metadata_keys.order(:sort_order).each do |key| %>
		<% entity_mention.metadatum_values.has_key(key).build %>
	<% end %>
	<%= render partial: "geo_viz/extracts/annotation/controls/new", locals: { entity_mention: entity_mention } %>
</div>
